{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["dom", "es2020"],
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "typeRoots": ["src/shims-tsx.d.ts", "src/shims-vue.d.ts"]
  },
  "include": ["src/**/*"]
}
